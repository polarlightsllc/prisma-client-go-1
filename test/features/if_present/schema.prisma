datasource db {
  provider = "sqlite"
  url      = env("__REPLACE__")
}

generator db {
  provider          = "go run github.com/steebchen/prisma-client-go-1"
  output            = "."
  disableGoBinaries = true
  package           = "db"
  previewFeatures   = ["mongoDb"]
}

model User {
  id       String  @id @default(cuid()) @map("_id")
  email    String  @unique
  username String
  name     String?
  age      Int?
  age2     Int?
  posts    Post[]
}

model Post {
  id       String  @id @default(cuid()) @map("_id")
  title    String
  author   User?   @relation(fields: [authorID], references: [id])
  authorID String?
}
